<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zhy.flygle.viewdemo.MainActivity" >

    <SurfaceView
        android:id="@+id/video_surfaceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </SurfaceView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="225dp"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_mediarecorder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/btn_mediarecorder_start" />

                <Button
                    android:id="@+id/btn_mediaplay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="播放" />
                <Button
                    android:id="@+id/btn_stop_all"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="录像预览" />

                <Button
                    android:id="@+id/btn_delete_all"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="清空" />
            </LinearLayout>

            <ListView
                android:id="@+id/listview_file"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                >
            </ListView>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>